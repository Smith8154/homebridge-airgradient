{
  "pluginAlias": "AirGradientPlatform",
  "pluginType": "platform",
  "headerDisplay": "AirGradient Configuration",
  "schema": {
    "type": "object",
    "properties": {
      "apiToken": {
        "title": "API Token",
        "type": "string",
        "required": true
      },
      "sensors": {
        "type": "array",
        "title": "AirGradient Sensors",
        "items": {
          "type": "object",
          "properties": {
            "locationId": {
              "title": "Location ID",
              "type": "string",
              "required": true
            },
            "pollingInterval": {
              "title": "Polling Interval (ms)",
              "type": "number",
              "default": 60000,
              "minimum": 1000
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "section",
      "items": [
        {
          "key": "apiToken",
          "placeholder": "Enter your API Token",
          "description": "Generated from the AirGradient Dashboard"
        },
        {
          "key": "sensors",
          "type": "array",
          "add": "Add Sensor",
          "items": [
            {
              "key": "sensors[].locationId",
              "placeholder": "Enter your Location ID",
              "description": "4-5 digit number, available on the Location menu"
            },
            {
              "key": "sensors[].pollingInterval",
              "placeholder": 60000
            }
          ]
        }
      ]
    }
  ]
}
